@model SensorDataChallenge.DTOs.LoginDTO

@{
    ViewBag.Title = "User Login";
}

<!-- begin login -->
<div class="login login-v1">
    <!-- begin login-container -->
    <div class="login-container">
        <!-- begin login-header -->
        <div class="login-header">
            <div class="brand">
                <span class="logo"></span> <b>Sensor</b> Data
                <small>digitalizando el sector agropecuario</small>
            </div>
            <div class="icon">
                <i class="fa fa-lock"></i>
            </div>
        </div>
        <!-- end login-header -->
        <!-- begin login-body -->
        <div class="login-body">
            <!-- begin login-content -->
            <div class="login-content">
                <form method="post" class="margin-bottom-0">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group m-b-20">
                        <label>
                            Username
                        </label>
                        <input asp-for="UserName" class="form-control form-control-lg inverse-mode" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group m-b-20">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control form-control-lg inverse-mode" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="checkbox checkbox-css m-b-20">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>

                    <div class="login-buttons">
                        <button type="submit" class="btn btn-success btn-block btn-lg">Login</button>
                    </div>
                </form>
            </div>
            <!-- end login-content -->
        </div>
        <!-- end login-body -->
    </div>
    <!-- end login-container -->
</div>
<!-- end login -->
